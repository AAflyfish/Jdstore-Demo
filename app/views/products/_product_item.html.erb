<li class="fl productList-item p15 pr <%= last_item(index) %>">
  <p class="productList-item-pic w200 h200">
    <%= link_to product_path(product) do %>
      <% if product.photos.present? %>
        <%= image_tag(product.photos[0].avatar.thumb.url) %>
      <% else %>
        <%= image_tag("http://placehold.it/418x418&text=No Pic") %>
      <% end %>
    <% end %>
  </p>
  <p class="productList-item-price fb col-red f18 mt10">ï¿¥<%= product.price %></p>
  <p class="productList-item-name ell">
    <%= link_to product_path(product) do %>
       <%= product.title %>
    <% end %>
  </p>
  <p class="productList-item-desc mt5 f12"><%= product.description %></p>
  <%= link_to add_to_cart_product_path(product), :method => :post, class: "productList-item-cartBtn pa border f18" do %>
    <i class="fa fa-shopping-cart col-red"></i>
  <% end %>
</li>